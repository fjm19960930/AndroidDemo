<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pivot.myandroiddemo.test.bezier.BezierActivity">
    <Button
        style="@style/TextStyle_White_Normal"
        android:id="@+id/btn_bezier_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_small"
        android:padding="@dimen/dimens_mid"
        android:gravity="center"
        android:text="清空"
        android:background="@drawable/radius_10_no_stroke_black66_bg_shape"/>
    <com.pivot.myandroiddemo.test.bezier.BezierView1
        android:id="@+id/bv1"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <com.pivot.myandroiddemo.test.bezier.BezierView2
        android:id="@+id/bv2"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
</LinearLayout>
