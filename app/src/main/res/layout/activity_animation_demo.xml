<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pivot.myandroiddemo.test.demoanimation.AnimationDemoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            style="@style/TextStyle_White_Normal"
            android:id="@+id/btn_anim_test1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_small"
            android:padding="@dimen/dimens_mid"
            android:gravity="center"
            android:text="动画测试1-四种动画标签"
            android:background="@drawable/radius_10_no_stroke_blue_mid_bg_shape"/>
        <Button
            style="@style/TextStyle_White_Normal"
            android:id="@+id/btn_anim_test2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_small"
            android:padding="@dimen/dimens_mid"
            android:gravity="center"
            android:text="动画测试2-插值器"
            android:background="@drawable/radius_10_no_stroke_blue_mid_bg_shape"/>
        <Button
            style="@style/TextStyle_White_Normal"
            android:id="@+id/btn_anim_test3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_small"
            android:padding="@dimen/dimens_mid"
            android:gravity="center"
            android:text="动画测试3-插值器 估值器使用示例"
            android:background="@drawable/radius_10_no_stroke_blue_mid_bg_shape"/>

    </LinearLayout>
</ScrollView>
