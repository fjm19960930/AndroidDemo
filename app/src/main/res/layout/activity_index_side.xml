<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pivot.myandroiddemo.test.indexside.IndexSideActivity">

    <com.zcolin.gui.zrecyclerview.ZRecyclerView
        android:id="@+id/list_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.pivot.myandroiddemo.test.indexside.IndexSideBar
        android:id="@+id/index_slide_bar"
        android:layout_width="23dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/index_slide_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/index_slide_bar"
        android:background="@mipmap/duihua"
        android:gravity="center"
        android:textColor="#ff5e00"
        android:textSize="30dp"
        android:visibility="invisible" />
</RelativeLayout>
