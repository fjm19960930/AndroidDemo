<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.pivot.myandroiddemo.test.demoanimation.test2.AnimationTest2Activity">
    
    <ImageView
        android:id="@+id/iv_anim_test2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/dimens_big"
        android:src="@drawable/icon_wb"
        android:scaleType="fitXY"/>
    
    <ImageView
        android:id="@+id/iv_anim_test2_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/loading"/>
    
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/iv_anim_test2_circle1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/scan_circle"/>
        <ImageView
            android:id="@+id/iv_anim_test2_circle2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/scan_circle"/>
        <ImageView
            android:id="@+id/iv_anim_test2_circle3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/scan_circle"/>
        <ImageView
            android:id="@+id/iv_anim_test2_circle4"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/scan_circle"/>
        <TextView
            android:id="@+id/tv_anim_test2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_qq"/>
    </FrameLayout>

</LinearLayout>
