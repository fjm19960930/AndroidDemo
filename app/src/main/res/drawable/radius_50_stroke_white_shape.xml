<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle" >

    <size
        android:width="100dp"
        android:height="100dp"/>
    <stroke
        android:width="@dimen/dimens_small_small"
        android:dashWidth="0dip"
        android:dashGap="10dip"
        android:color="@color/white"/>
    <corners 
        android:radius="50dp"/>
    <gradient     
        android:startColor="@color/green"    
        android:centerColor="@color/red"    
        android:endColor="@color/blue_mid"    
        android:useLevel="true"    
        android:angle="90"    
        android:type="linear"    
        android:centerX="0"    
        android:centerY="0"    
        android:gradientRadius="90"/>
    <padding
        android:right="@dimen/dimens_small_min"
        android:bottom="@dimen/dimens_small_min"
        android:top="@dimen/dimens_small_min"
        android:left="@dimen/dimens_small_min"/>
</shape>